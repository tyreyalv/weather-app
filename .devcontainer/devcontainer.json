{
    "name": "Python Devcontainer",
    "image": "registry.tyreyalv.com/jenkins/home-ray-cluster:main",
    "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.isort",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.autopep8"
    ],
    "runArgs": ["--shm-size=8g"],
    "containerEnv": {
        "PYTHONPATH": "/workspaces/weather-app"
    },
    "mounts": [
        "source=${localWorkspaceFolder}/.env,target=/workspaces/weather-app/.env,type=bind"
    ]
}